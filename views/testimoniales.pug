extends   ./layout/index
block contenido 
   
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lee sobre nuestros clientes  y sus expreiencias
        include ./layout/bloque_testimoniales
                               
                                


        .row    
            .col-12
                h2.d-block.w-100.text-center Agrega un Testimonial
                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center #{error.alerta}
            
            .row.justify-content-center.col
                .col-md-8   
                    form(action="/testimoniales" method="POST")
                        .form-group     
                            label(for="nombre") Nombre
                            input(type="text", di="nombre",placeholder="Tu nombre", name="nombre", class="form-control", value=nombre) 
                        .form-group     
                            label(for="correo") Tu correo
                            input(type="email", di="correo",placeholder="Tu correo", name="correo", class="form-control" value=correo) 
                        .form-group   
                            label(for="mensaje") Mensaje
                            textarea(id="mensaje", class="form-control", placeholder="Tu mensaje", name="mensaje",rows=3)=mensaje
                        input(type="submit" value="Enviar" class="btn btn-success btn-block")
                           
            